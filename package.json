{
  "name": "static-site-hero",
  "displayName": "Static Site Hero",
  "description": "Helps with writing posts for static site generator",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.insertLink",
    "onCommand:extension.insertFigure"    
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command":"extension.insertLink",
        "title": "Insert Markdownx Link to File or Image"
      },{
        "command":"extension.insertFigure",
        "title":"Insert Markdownx HTML figure"
      }],
      "keybindings":[
        {
          "command": "extension.insertLink",
          "key":"shift+ctrl+l",
          "mac":"shift+cmd+l",
          "when":"editorTextFocus"
        },
        {"command": "extension.insertFigure",
        "key":"shift+ctrl+j",
        "mac":"shift+cmd+j",
        "when":"editorTextFocus"}
      ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
